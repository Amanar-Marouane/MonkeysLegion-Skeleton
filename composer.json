{
  "name": "monkeyscloud/monkeyslegion-skeleton",
  "description": "Starter project for the MonkeysLegion framework",
  "type": "project",
  "license": "MIT",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^8.4",
    "monkeyscloud/monkeyslegion": "^1.0@dev"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-create-project-cmd": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
      "@php vendor/bin/ml key:generate"
    ],
    "post-install-cmd": [
      "@php vendor/bin/ml key:generate --if-missing"
    ],
    "serve": "php bin/dev-server",
    "test": "phpunit"
  },
  "bin": [
    "bin/ml",
    "bin/dev-server"
  ],
  "extra": {
    "branch-alias": {
      "dev-main": "1.0-dev"
    }
  }
}